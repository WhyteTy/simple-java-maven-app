pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven 3.9.9', type: 'maven'
        DEPLOY_DIR = "${env.WORKSPACE}\\deploy\\development"
    }

    stages {
        stage('Build') {
            steps {
                withEnv(["PATH+MAVEN=${MAVEN_HOME}/bin"]) {
                    bat 'mvn -B -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                withEnv(["PATH+MAVEN=${MAVEN_HOME}/bin"]) {
                    bat 'mvn test'
                }
            }
        }

        stage('Deploy to dev') {
            steps {
                withEnv(["PATH+MAVEN=${MAVEN_HOME}/bin"]) {
                    bat "mkdir ${DEPLOY_DIR}"
                    bat "copy target\\*.jar ${DEPLOY_DIR}\\ /Y"
                }
            }
        }
    }

    post {
        success {
            echo "Build and integration tests succeeded on branch: ${BRANCH_NAME}"
        }
        failure {
            echo "Build or integration tests failed on branch: ${BRANCH_NAME}"
        }
    }
}
